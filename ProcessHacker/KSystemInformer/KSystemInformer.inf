ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\systeminformer.sys

[SystemInformer.DriverFiles]
systeminformer.sys
ksi.dll

[SourceDisksFiles]
systeminformer.sys = 1,,
ksi.dll = 1,,

[SourceDisksNames]
1 = %DiskId1%,,,""

[Strings]
